#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include "../zmk-nodefree-config/helper.h"
#include "../zmk-nodefree-config/keypos_def/keypos_60keys.h"

// layer shortcuts, must match order in which they are defined below
#define BASE 0
#define WIN 1
#define NAV 2
#define NUM 3
#define CFG 4

// Behaviours
#define TAPPING_TERM_MS 280
#define QUICK_TAP_MS 50

// Hold taps
ZMK_BEHAVIOR(hold_kp, hold_tap,
    flavor = "hold-preferred";
    tapping-term-ms = <TAPPING_TERM_MS>;
    quick-tap-ms = <QUICK_TAP_MS>;
    bindings = <&kp>, <&kp>;
)
#define BK_GUI &hold_kp LGUI BSPC
#define BK_CTRL &hold_kp LCTRL BSPC

ZMK_BEHAVIOR(hold_kp_bal, hold_tap,
    flavor = "balanced";
    tapping-term-ms = <TAPPING_TERM_MS>;
    quick-tap-ms = <QUICK_TAP_MS>;
    bindings = <&kp>, <&kp>;
)
#define SPC_GUI &hold_kp_bal RGUI SPACE
#define SPC_CTRL &hold_kp_bal RCTRL SPACE

ZMK_BEHAVIOR(rpt, hold_tap,
    flavor = "balanced";
    tapping-term-ms = <TAPPING_TERM_MS>;
    quick-tap-ms = <QUICK_TAP_MS>;
    bindings = <&kp>, <&key_repeat>;
)
#define RPT_RALT &rpt RALT 0

ZMK_BEHAVIOR(hold_layer, hold_tap,
    flavor = "hold-preferred";
    tapping-term-ms = <TAPPING_TERM_MS>;
    quick-tap-ms = <QUICK_TAP_MS>;
    bindings = <&mo>, <&kp>;
)
#define DEL_NUM &hold_layer NUM DEL
#define RET_NAV &hold_layer NAV RET

// Tap dance
ZMK_BEHAVIOR(lalt_rpt_nav, tap_dance,
    tapping-term-ms = <TAPPING_TERM_MS>;
    bindings = <&rpt LALT 0>, <&hold_layer NAV 0>;
)
#define NAV_RPT_LALT &lalt_rpt_nav 0 0

// Mod morphs
ZMK_BEHAVIOR(excl_pct, mod_morph,
    bindings = <&kp EXCL>, <&kp PRCNT>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
)
ZMK_BEHAVIOR(at_caret, mod_morph,
    bindings = <&kp AT>, <&kp CARET>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
)
ZMK_BEHAVIOR(hash_amp, mod_morph,
    bindings = <&kp HASH>, <&kp AMPS>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
)
ZMK_BEHAVIOR(dlr_star, mod_morph,
    bindings = <&kp DLLR>, <&kp STAR>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
)
ZMK_BEHAVIOR(round, mod_morph,
    bindings = <&kp LPAR>, <&kp RPAR>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
)
ZMK_BEHAVIOR(square, mod_morph,
    bindings = <&kp LBKT>, <&kp RBKT>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
)
ZMK_BEHAVIOR(curly, mod_morph,
    bindings = <&kp LBRC>, <&kp RBRC>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
)
ZMK_BEHAVIOR(angled, mod_morph,
    bindings = <&kp LT>, <&kp GT>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
)

// Num word
&num_word {
    layers = <NUM>;
};

// Sticky shift
&sk {
    release-after-ms = <2000>;
    quick-release;
};

#define combo_timeout 30
#define combo_timeout_long 60
#define combo_global_quick_tap 150
#define combo_global_quick_tap_long 300

/ {
    combos {
        compatible = "zmk,combos";
        combo_tab {
            timeout-ms = <combo_timeout>;
            global-quick-tap-ms = <combo_global_quick_tap>;
            key-positions = <LT1 LT2>;
            layers = <BASE WIN NAV NUM>;
            bindings = <&kp TAB>;
        };
        combo_shift_tab {
            timeout-ms = <combo_timeout>;
            global-quick-tap-ms = <combo_global_quick_tap>;
            key-positions = <LT2 LT3>;
            layers = <BASE WIN NAV NUM>;
            bindings = <&kp LS(TAB)>;
        };
        combo_esc {
            timeout-ms = <combo_timeout>;
            global-quick-tap-ms = <combo_global_quick_tap>;
            key-positions = <LT3 LT4>;
            layers = <BASE WIN NAV NUM>;
            bindings = <&kp ESC>;
        };
        combo_caps_word {
            timeout-ms = <combo_timeout>;
            key-positions = <RM2 RM3>;
            layers = <BASE WIN>;
            bindings = <&caps_word>;
        };
        combo_caps_lock {
            timeout-ms = <combo_timeout>;
            key-positions = <RM3 RM4>;
            layers = <BASE WIN>;
            bindings = <&kp CAPS>;
        };
        combo_num_word {
            timeout-ms = <combo_timeout>;
            global-quick-tap-ms = <combo_global_quick_tap>;
            key-positions = <LM2 LM3>;
            layers = <BASE WIN NUM>;
            bindings = <&num_word>;
        };
        combo_lshift {
            timeout-ms = <combo_timeout_long>;
            key-positions = <LM1 LM2>;
            layers = <BASE WIN NAV NUM>;
            bindings = <&kp LSHIFT>;
        };
        combo_sticky_lshift {
            timeout-ms = <combo_timeout_long>;
            global-quick-tap-ms = <combo_global_quick_tap>;
            key-positions = <LB2 LB3>;
            layers = <BASE WIN NAV NUM>;
            bindings = <&sk LSHIFT>;
        };
        combo_rshift {
            timeout-ms = <combo_timeout_long>;
            key-positions = <RM1 RM2>;
            layers = <BASE WIN NAV NUM>;
            bindings = <&kp RSHIFT>;
        };
        combo_LCFG {
            timeout-ms = <combo_timeout>;
            global-quick-tap-ms = <combo_global_quick_tap>;
            key-positions = <LN3 LN4>;
            layers = <BASE WIN NAV NUM>;
            bindings = <&tog CFG>;
        };
        combo_RCFG {
            timeout-ms = <combo_timeout>;
            global-quick-tap-ms = <combo_global_quick_tap>;
            key-positions = <RN3 RN4>;
            layers = <BASE WIN NAV NUM>;
            bindings = <&tog CFG>;
        };
        combo_LBASE {
            timeout-ms = <combo_timeout>;
            global-quick-tap-ms = <combo_global_quick_tap>;
            key-positions = <LB3 LB4>;
            layers = <BASE NAV NUM CFG>;
            bindings = <&to BASE>;
        };
        combo_RBASE {
            timeout-ms = <combo_timeout>;
            global-quick-tap-ms = <combo_global_quick_tap>;
            key-positions = <RB3 RB4>;
            layers = <BASE NAV NUM CFG>;
            bindings = <&to BASE>;
        };
        combo_NAV {
            timeout-ms = <combo_timeout>;
            global-quick-tap-ms = <combo_global_quick_tap>;
            key-positions = <RB1 RB2>;
            layers = <BASE WIN NAV>;
            bindings = <&tog NAV>;
        };
        combo_NUM {
            timeout-ms = <combo_timeout>;
            global-quick-tap-ms = <combo_global_quick_tap>;
